{
  "name": "todo-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "heroku-postbuild": "tsc && cd client && npm install && npm run build && cd .. && mv client/build/ dist/build",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\" \"cd client && npm start\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.9",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.14",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}